<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sergigonzalez.appautobuses.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="@string/mensajeBienvenida"
        android:fontFamily="casual"
        android:textSize="24sp"
        android:id="@+id/textViewMsgWelcome"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/mensajePassword"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMsgPassWord"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/mensajeLogueo"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMatricula"
        android:layout_marginTop="31dp"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:layout_below="@+id/textViewMsgWelcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="center"
        android:layout_marginTop="37dp"
        android:id="@+id/editText2"
        android:fontFamily="casual"
        android:hint="@string/insertaAqui"
        android:layout_below="@+id/textViewMatricula"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:id="@+id/editTextPassword"
        android:fontFamily="casual"
        android:hint="@string/insertaAqui"
        android:textAlignment="center"
        android:layout_below="@+id/textViewMsgPassWord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/botonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:id="@+id/btnMainSend" />

</RelativeLayout>
